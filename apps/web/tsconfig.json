{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "incremental": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@dnd-academy/ui": ["./node_modules/@dnd-academy/ui"],
      "@dnd-academy/ui/server": ["./node_modules/@dnd-academy/ui/dist/server"],
      "@dnd-academy/ui/client": ["./node_modules/@dnd-academy/ui/dist/client"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
  },
  "include": [
    "@types",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "./jest-setup.ts"
  ],
  "exclude": [
    "cypress"
  ]
}
