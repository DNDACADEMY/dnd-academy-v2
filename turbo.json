{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "deploy": {
      "dependsOn": [
        "lint",
        "stylelint",
        "test:coverage",
        "build"
      ]
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": [
        "$TURBO_DEFAULT$",
        "!**/*.stories.{tsx,mdx}",
        "!**/*.test.{tsx,ts}"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "dist/**"
      ]
    },
    "lint": {
      "inputs": [
        "**/*.{js,jsx,ts,tsx}"
      ]
    },
    "stylelint": {
      "inputs": [
        "**/*.{scss,css}"
      ]
    },
    "test:coverage": {
      "outputs": ["coverage/**"],
      "inputs": [
        "**/*.test.{tsx,ts}"
      ]
    },
    "dev": {
      "persistent": true,
      "cache": false,
      "interactive": true
    }
  }
}
