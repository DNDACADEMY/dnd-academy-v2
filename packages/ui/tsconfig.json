{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "inlineSources": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveWatchOutput": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
    },
    "types": ["jest", "node", "vite/client"]
  },
  "include": ["src", "index.d.ts", "server.d.ts", "client.d.ts", "@types", "vite.config.mts"],
  "exclude": ["dist", "build", "node_modules"]
}
