{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "inlineSources": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveWatchOutput": true,
    "baseUrl": "./",
    "paths": {
      "@dnd-academy/ui": ["./src/index.ts"],
      "@dnd-academy/ui/server": ["./src/server.ts"],
      "@dnd-academy/ui/client": ["./src/client.ts"]
    },
    "types": ["jest", "node", "vite/client"]
  },
  "include": ["src", "@types", "jest-setup.ts", "vite.config.mts"],
  "exclude": ["dist", "build", "node_modules"]
}
