    "@types/eslint": "^8",
    "@types/jest-plugin-context": "2.9.7",
    "@types/node": "^20",
    "eslint": "8.56.0",
    "husky": "8.0.3",
    "jest": "29.7.0",
    "jest-plugin-context": "2.9.0",
    "lint-staged": "15.2.0",
    "postcss": "8.4.32",
    "postcss-scss": "4.0.9",
    "stylelint": "15.11.0",
    "stylelint-config-recommended-scss": "13.1.0",
    "stylelint-config-standard": "34.0.0",
    "stylelint-config-standard-scss": "11.1.0",
    "stylelint-scss": "5.3.2",
    "turbo": "2.0.5",
